<div class="grid_6">
	Найти<br />
		<%= form_for :search, :url => search_path, :html => { :method => :get, :class => "" } do |f| %>
			<%= f.text_field :keywords, :placeholder => "Поиск по сайту" %>
		<% end %>
</div>
<div class="grid_6">
	<%= form_tag ('/adding') do %>
	<%= text_field_tag :title %>
	<%= submit_tag 'Тыц!' %>
	<% end %>
	<% if current_user %>
		<% current_user.books.each do |b| %>
			<%= b.title %>
		<% end %>
	<% end %>
</div>
